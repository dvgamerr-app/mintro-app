---
import BaseLayout from '../layouts/BaseLayout.astro'
import Home from '../components/Home.svelte'

const title = 'Mintro'
const description = 'Welcome to Mintro â€” Astro layout + Svelte pages'
---

<BaseLayout {title} {description}>
  <script is:inline>
    try {
      const s = localStorage.getItem('settings')
      if (s) {
        const { startPage } = JSON.parse(s)
        if (startPage && typeof startPage === 'string' && startPage !== '/' && location.pathname === '/') {
          location.replace(startPage)
        }
      }
    } catch (_) {}
  </script>
  <Home client:load />
</BaseLayout>
